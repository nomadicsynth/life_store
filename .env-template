# Life Store environment variables template - copy to .env and edit as needed
LIFESTORE_DATA_PATH=data
LIFESTORE_HOST=127.0.0.1
LIFESTORE_PORT=8443
LIFESTORE_SSL_CERT=${LIFESTORE_DATA_PATH}/certs/cert.pem
LIFESTORE_SSL_KEY=${LIFESTORE_DATA_PATH}/certs/key.pem

# Gradio apps can serve as an MCP server. Set to True to enable by default in any Gradio apps.
GRADIO_MCP_SERVER=False

# Inventory settings
LIFESTORE_INVENTORY_HOST=${LIFESTORE_HOST}
LIFESTORE_INVENTORY_PORT=${LIFESTORE_PORT}
LIFESTORE_INVENTORY_SSL_CERT=${LIFESTORE_SSL_CERT}
LIFESTORE_INVENTORY_SSL_KEY=${LIFESTORE_SSL_KEY}

# Task manager settings
TASK_MANAGER_DB=${LIFESTORE_DATA_PATH}/tasks/tasks.db
TASK_MANAGER_HOST=${LIFESTORE_HOST}
TASK_MANAGER_PORT=${LIFESTORE_PORT}

# Cannabis inventory settings
CANNABIS_LEAD_TIME_DAYS=3
CANNABIS_SAFETY_STOCK_DAYS=4
